<% if @department.errors.any? %>
  <!-- ERROR PANEL -->
  <div class="row">
    <div class="col-xs-12 column">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title">Please correct the following:</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% @department.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>  <!-- row error panel -->
<% end %>

<div class="well">
  <%= bootstrap_form_for(@department, layout: :horizontal,
                         label_col: 'col-lg-3', control_col: 'col-lg-9') do |f| %>
    <legend>Department Maintenance</legend>

    <%= f.text_field :name, placeholder: 'Department Name',
                     label: 'Department Name', class: 'set-focus' %>

    <%= f.text_field :location, placeholder: 'Location' %>

    <%= f.phone_field :phone, class: 'mask-phone', placeholder: 'xxx-xxx-xxxx' %>

    <%= f.form_group do %>
      <%= f.submit class: 'btn btn-success'%>
    <% end %>
  <% end %>

</div> <!-- well -->