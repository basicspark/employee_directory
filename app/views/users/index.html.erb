<!-- ********************* MAIN CONTENT ********************* -->
<div class="row clearfix">
  <%= render 'users/side_panel', filter_path: users_filter_path %>
  <!-- USER LIST -->
  <div class="col-md-9 column">
    <div class="panel panel-default table-panel">
      <div class="panel-heading">
        <h3 class="panel-title">
          User Maintenance
        </h3>
        <small><%= link_to 'Create New User', new_user_path,
                           class: 'new-user-link' %></small>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th>Action</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Department</th>
            </a>
          </tr>
          </thead>
          <tbody data-link="row">
          <% if @users.any? %>
            <%= render @users %>
          <% else %>
            <tr><td colspan="4" class="no-records">No Matching Records</td></tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @users, renderer: BootstrapPagination::Rails,
                          class: 'pagination-sm',
                          params: { user_filter_type: params[:user_filter_type],
                                    user_filter_department: params[:user_filter_department],
                                    user_filter_string: params[:user_filter_string] }%>
      </div> <!-- panel body -->
    </div>  <!-- panel -->
  </div> <!-- col user list -->

</div> <!-- row main content ************************************** -->

