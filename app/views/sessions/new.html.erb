<!-- ********************* MAIN CONTENT ********************* -->
<%= render partial: 'shared/app_flash', locals: { box_size: :small } %>

<!-- Login Form -->
<div class="row clearfix signin-row">
  <div class="col-md-4"></div>
  <div class="col-md-4 column">
    <%= bootstrap_form_tag url: sessions_path do |f| %>

      <h2 class="form-signin-heading">Please log in</h2>

      <!--Email-->
      <%= f.email_field :email, hide_label: true,
                        placeholder: 'Email address',

                        class: 'set-focus', required: true %>
      <!--Password-->
      <%= f.password_field :password, hide_label: true,
                           placeholder: 'Password', required: true %>

      <label class="checkbox remember-me-text">
        <input type="checkbox" value="remember-me"> Remember me
      </label>

      <%= f.submit 'Log in', class: 'btn btn-lg btn-primary btn-block' %>

    <% end %>
  </div>
  <div class="col-md-4"></div>
</div> <!-- Login Form -->